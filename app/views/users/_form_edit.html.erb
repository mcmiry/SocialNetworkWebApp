<%= stylesheet_link_tag "show_user" %>

<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row">
      <div class="col-lg-3 col-lg-offset-1 profile-userpic">
        <!-- <img src= <%= @user.profilepic %> width="100px"> -->
        <img src=<%= user.profilepic %> width="150px">
        <%= f.select :profilepic, options_for_select([["Avatar 1", "/images/avatar1.png"], ["Avatar 2", "/images/avatar2.png"], ["Avatar 3", "/images/avatar3.png"], ["Avatar 4", "/images/avatar4.png"], ["Avatar 5", "/images/avatar5.png"], ["Avatar 6", "/images/avatar6.png"], ["Avatar 7", "/images/avatar7.png"], ["Avatar 8", "/images/avatar8.png"], ["Avatar 9", "/images/avatar9.png"], ["Avatar 10", "/images/avatar10.png"], ["Avatar 11", "/images/avatar11.png"], ["Avatar 12", "/images/avatar12.png"]]) %>
        <a href="javascript:showAvatars()" style="margin-left: 20px;">Show available avatars</a>
      </div>
      <div class="col-lg-7 my-col">
      <label style="margin-bottom: 15px !important;"><font size=6 color="#00bfee">Edit your Profile</font></label>
        <div class="row form-group row-form">
          <label class="col-lg-2 col-form-label">Name:</label>
          <div class="col-lg-7 col-xs-6 text-center">
            <%= f.text_field :name, class: 'form-control', placeholder: 'Name', id: 'txtName' %>
          </div>
        </div>
        <div class="row form-group row-form">
          <label class="col-lg-2 col-form-label">Surname:</label>
          <div class="col-lg-7 col-xs-6 text-center">
            <%= f.text_field :surname, class: 'form-control', placeholder: 'Surname' %>
          </div>
        </div>
        <div class="row form-group row-form">
          <label class="col-lg-2 col-form-label">Nick:</label>
          <div class="col-lg-7 col-xs-12 text-center">
            <%= f.text_field :nick, class: 'form-control', placeholder: 'Nick' %>
          </div>
        </div>
        <div class="row form-group row-form">
          <label class="col-lg-2 col-form-label">Email:</label>
          <div class="col-lg-7 col-xs-12 text-center">
            <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
          </div>
        </div>
        <div class="row form-group row-form">
          <label class="col-lg-2 col-form-label">Password:</label>
          <div class="col-lg-7 col-xs-12 text-center">
            <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
          </div>
        </div>
        <div class="row form-group">
          <div class="col-lg-2 col-xs-6 text-center col-lg-offset-4">
            <%= link_to 'Cancel', posts_path, class: 'btn btn-info btn-lg my-btn-save'  %>
          </div>
          <div class="col-lg-2 col-xs-6 text-center">
            <%= f.submit "Save", class: 'btn btn-info btn-lg my-btn-save'%>
          </div>
        </div>
      </div>
    </div>

    <%= render partial: "users/avatars_available"%> 
<% end %>
